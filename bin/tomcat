#!/bin/bash

#ABOUT:
# This is a custom tomcat shortcut service for 
# starting, stopping, viewing the log, and status check.
#:ABOUT

tcatpath=/Users/mcu/tomcat7
logpath=$tcatpath/logs/catalina.out

watchlog() { tail -f $logpath; }

for i; do
    case $i
        in
        start) bash $tcatpath/bin/startup.sh | watchlog; shift;;
        stop) bash $tcatpath/bin/shutdown.sh | watchlog; shift;;
        logs) watchlog; shift;;
        status) ps -ef | grep tomcat; shift;;
        *) echo Invalid command; exit;
    esac
done
