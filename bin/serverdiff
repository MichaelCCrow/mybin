#!/bin/bash

#ABOUT:
# 1) user@server:/some/path/to/file.txt \n2) local_file
#:ABOUT

if [[ $# != 2 ]]; then
    about $0
    exit
fi

#ssh $1 "diff -r $3" < $2

function gettmpfile() {
    now=`date "+%m.%s"`
    name=`basename $1`
    echo "/tmp/$name.$now"
}

function getserver() {
    echo "$1" | cut -d '@' -f 2 | cut -d ':' -f 1
}

if [[ `ping -qo $(getserver $1)` ]]; then
    #echo "first is server"
    serv=$1
    loc=$2
else 
    #echo "second is server"
    serv=$2
    loc=$1
fi

#echo "server: $serv"
#echo "loc: $loc"

tmploc="$(gettmpfile $loc)"

#echo "tmploc: $tmploc"
#echo "scp $serv $tmploc"

scp $serv $tmploc

echo -e "\nlocal on the left\n"

diff $loc $tmploc | less

echo "completed diff"

rm -v $tmploc
