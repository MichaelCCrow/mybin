############################################
# Short-form script to google with Firefox
# and without need to quote search string.
############################################

app="Chrome"
search=""
echo "Googling: ${@}"
for term in $@; do
    search="$search%20$term"
done
open -a $app "https://www.google.com/search?q=$search"
